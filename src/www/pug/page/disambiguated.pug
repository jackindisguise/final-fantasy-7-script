extends ../widget/template.pug

block content
	#index.page
		form(method='POST', action="/disambiguated/"+scene)
			table(id='vocabulary', cellspacing=20, cellpadding=0)
				tr 
					th="Line #"
					th="Word (Original)"
					th="Root (Analyzed)"
					th="Definitions"
					th="English"
					th="Japanese"
				- let i = 0;
				while i < lines.length
					- let line = lines[i];
					tr(class='entry')
						td(class='line')
							div.ff7=i
						td(class='word')
							div.ff7=line.word
						td(class='root')
							div.ff7=line.root
						td(class='definition')
							div.ff7=line.definition
						td(class='english')
							div.ff7=line.english
						td(class='japanese')
							div.ff7=line.japanese
					- i++;
			input(type='submit', class='submit')